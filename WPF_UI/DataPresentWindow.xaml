<Window x:Class="WPF_UI.DataPresentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="DataPresentWindow">
    <StackPanel Name="panel">
        <StackPanel.Resources>
            <LinearGradientBrush x:Key="MyBackground" EndPoint="0.504,1.5" StartPoint="0.504,0.03">
                <GradientStop Color="Yellow" Offset="0"/>
                <GradientStop Color="#FFFFFFFF" Offset="0.567"/>
            </LinearGradientBrush>
            <Style TargetType="Label">
                <Setter  Property="Background" Value="{StaticResource MyBackground}"/>
            </Style>
        </StackPanel.Resources>
        <Label Name="TitleLabel"/>
        <DataGrid Name="data"/>
        <Button Name="closeButton" Content="Close" Click="closeButton_Click" Margin="10" FontSize="30"/>
    </StackPanel>
    
</Window>
