<UserControl x:Class="WPF_UI.bothUpdateOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_UI"
             mc:Ignorable="d">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="FontSize" Value="50"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
        </StackPanel.Resources>
        <Grid Height="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Name="updateAndGradeButton" Content="Grade the test" Click="updateAndGradeButton_Click" Grid.Row="0"/>
            <Button Name="changeTheDate" Content="Change the date of the test" Click="changeTheDate_Click" Grid.Row="1"/>
            <Button Name="backButton" Content="Back" Click="backButton_Click" Grid.Row="2"/>
        </Grid>


    </StackPanel>
</UserControl>
